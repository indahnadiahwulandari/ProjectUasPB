<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover"
    tools:context=".FotoAtlet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Dokumentasi"
            android:textColor="#FFF"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:background="#8B4513"
            android:textSize="45sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="177dp"
                android:paddingRight="15dp"
                android:src="@drawable/olga6" />

            <ImageView
                android:layout_width="163dp"
                android:layout_height="177dp"
                android:paddingLeft="15dp"
                android:src="@drawable/olga1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="30dp"
                android:text="Kegiatan Atlet di berbagai Cabang"
                android:textStyle="bold"
                android:textColor="#8B4513"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="177dp"
                android:paddingRight="15dp"
                android:src="@drawable/olga2" />

            <ImageView
                android:layout_width="163dp"
                android:layout_height="177dp"
                android:paddingLeft="15dp"
                android:src="@drawable/olga3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="30dp"
                android:text="Cabang Olahraga Lari dan Sepak Bola"
                android:textStyle="bold"
                android:textColor="#8B4513"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="177dp"
                android:paddingRight="15dp"
                android:src="@drawable/olga7" />

            <ImageView
                android:layout_width="163dp"
                android:layout_height="177dp"
                android:paddingLeft="15dp"
                android:src="@drawable/olga6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="30dp"
                android:text="Cabang Olahraga Basket"
                android:textColor="#8B4513"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:layout_alignParentBottom="true"
            android:background="#8B4513"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indah Nadiah Wulandari-09031381722121"
                android:textColor="#FFFF"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

